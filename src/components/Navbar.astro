---
import Image from "astro/components/Image.astro"
import Cross from "../../public/images/cross.webp"
---

<div>
    <Image id="cross" width={100} height={100} src={Cross} alt="Jesus's Cross" /> 
    <p><a id="main" href="/">OrthodoxScripture</a></p>
</div>

<style>
    div {
        background-color: #32383D;
        font-size: 50px;
        color: white;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    #cross {
        filter: invert(1);
    }
    #main {
        color: white;
        text-decoration: none;
    }
</style>